{
  "version": 2,
  "builds": [
    {
      "src": "app/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "buildCommand": "npm run build --workspace=frontend" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/app/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}