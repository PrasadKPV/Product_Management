{
  "name": "product-management",
  "version": "1.0.0",
  "description": "Monorepo",
  "private": true,
  "workspaces": [
    "app/backend",
    "app/frontend"
  ],
  "scripts": {
    "dev": "concurrently --raw \"npm run dev --workspace=backend\" \"wait-on http://localhost:5000 && npm run dev --workspace=frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "start:backend": "npm start --workspace=backend",
    "start:frontend": "npm start --workspace=frontend"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
